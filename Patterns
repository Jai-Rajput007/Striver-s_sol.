void nStarTriangle(int n) {
  for(int i=1;i<=n;i++){
      for(int j=1;j<=i;j++){
          cout<<"*";
      }
      cout<<endl;
  }
   for(int i=1;i<=n;i++){
      for(int j=1;j<n-i+1;j++){
          cout<<"*";
      }
      cout<<endl;
  }
}
