#include<bits/stdc++.h>
int getLongestZeroSumSubarrayLength(vector<int> &arr){
int left =0,right =0;
long long sum =arr[0];
	int maxlen =0;
	 int  k =0;
	int n = arr.size();
	while(right<n){
		while(left<=right && sum>k){
			sum -= arr[left];
			left++;
		}
		if(sum==k){
			maxlen = max(maxlen,right-left+1);
		}
			right++;
			if(right<n)sum+= arr[right];
		}
		return maxlen;
	}
